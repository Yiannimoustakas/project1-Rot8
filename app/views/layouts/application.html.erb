<!DOCTYPE html>
<html>
  <head>
    <title>Project1Rot8</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= cloudinary_js_config %>
  </head>

  <body>
    <h1>Project 1: RoT8</h1>
    <ul class="nav nav-tabs">
      <% if @current_user.present? %>
        <li class="nav-item">
          Welcome, <%= @current_user.name %>
        </li>
        <li class="nav-item">
          <%= link_to "Profile", user_path(@current_user.id) %>
        </li>
        <li class="nav-item">
          <%= link_to 'Brands', brands_path %>
        </li>
        <li class="nav-item">
          <%= link_to 'Sneakers', sneakers_path %>
        </li>
        <li class="nav-item">
          <%= link_to "RoT8s", rotates_path %>
        </li>
        <li class="nav-item">
          <%= link_to 'Logout', login_path, method: 'delete', class: "right" %>
        </li>
        </ul>
      <% else %>
        <li class="nav-item">
          <%= link_to 'Login', login_path %>
        </li>
        <li class="nav-item">
          <%= link_to 'Sign Up', new_user_path %>
        </li>
        <li class="nav-item">
          <%= link_to 'Brands', brands_path %>
        </li>
        <li class="nav-item">
          <%= link_to 'Sneakers', sneakers_path %>
        </li>
        <li class="nav-item">
          <%= link_to "RoT8s", rotates_path %>
        </li>
        </ul>
      <% end %>

    <%= yield %>
  </body>
</html>
