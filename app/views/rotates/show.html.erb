<h2><%= @rotate.name %></h2>

"<%= @rotate.name%>"

<br>
Created by <%= @rotate.user.name %>
<br>
<ul>
  <div class="grid-container">
    <% @rotate.sneakers.each do |sneaker| %>
    <div class="grid-item">
      <li>
        <%= link_to (image_tag sneaker.image, alt: sneaker.name, class: 'sneakerGrid'), sneaker_path(sneaker.id) %><br>
        <%= link_to sneaker.name, sneaker_path(sneaker.id) %>
      </li>
    </div>
    <% end %>
  </div>
</ul>

<% if @current_user.present? && @rotate.user == @current_user %>
<%= link_to 'Edit Rotate', edit_rotate_path(@rotate.id) %> <br>
<%= link_to 'Delete Rotate', rotate_path(@rotate.id), method: 'delete' %>
<% end %>
